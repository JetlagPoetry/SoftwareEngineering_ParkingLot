<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nku.cs.parkinglot.MainActivity"> 

    <!--tab-->
    <LinearLayout
        android:id="@+id/linear_bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        >

        <!--Appointment-->
        <RelativeLayout
            android:id="@+id/layout_book"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">


            <TextView
                android:id="@+id/txt_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:text="预约"
                android:textSize="16dp"
                android:textAlignment="center" />


        </RelativeLayout>

        <!--Order-->
        <RelativeLayout
            android:id="@+id/layout_order"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/txt_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:text="订单"
                android:textSize="16dp"
                android:textAlignment="center" />

        </RelativeLayout>

        <!--mine-->
        <RelativeLayout
            android:id="@+id/layout_mine"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">


            <TextView
                android:id="@+id/txt_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:text="我的"
                android:textSize="16dp"
                android:textAlignment="center" />
        </RelativeLayout>

    </LinearLayout>

    <!--中间内容部分-->
    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_above="@+id/linear_bottom_tab">

    </LinearLayout>



</RelativeLayout>
